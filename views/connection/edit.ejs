<%- include('../partials/header.ejs') %>


    <!-- Form to make a new connection -->
    <div class="connection-main">
        <h1 style="margin-top: 20px; margin-left: 50px; margin: 50px;">Edit Connection</h1>
        <form action="/connections/<%=connection.id%>?_method=PUT" method="POST" class="container connection-form">
            <div class="mb-3">
                <div class="row">
                    <div class="col-md-1">
                        <label class="form-label">Topic</label>
                    </div>
                    <div class="col-md-9">
                        <input type="text" name="topic" value="<%=connection.topic%>" class="form-control" id="inputTopic">
                    </div>
                </div>  
            </div>

            <div class="mb-3">
                <div class="row">
                    <div class="col-md-1">
                        <label class="form-label">Title</label>
                    </div>
                    <div class="col-md-9">
                        <input type="text" name="title" value="<%=connection.title %>" class="form-control" id="inputTitle">
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <div class="row">
                    <div class="col-md-1">
                        <label class="form-label">Host</label>
                    </div>
                    <div class="col-md-9">
                        <input type="text" name="host" value="<%=connection.host %>" class="form-control" id="inputHost">
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <div class="row">
                    <div class="col-md-1">
                        <label class="form-label">Details</label>
                    </div>
                    <div class="col-md-9">
                        <input type="text" name="details" value="<%=connection.details %>" class="form-control" id="inputDetails">
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <div class="row">
                    <div class="col-md-1">
                        <label class="form-label">Where</label>
                    </div>
                    <div class="col-md-9">
                        <input type="text" name="where" value="<%=connection.where %>" class="form-control" id="inputWhere">
                    </div>
                </div>
            </div>
            
            <div class="mb-3">
                <div class="row">
                    <div class="col-md-1">
                        <label class="form-label">When</label>
                    </div>
                    <div class="col-md-9">
                        <input type="date" name="when" value="<%=connection.when %>" class="form-control" id="inputWhen">
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <div class="row">
                    <div class="col-md-1">
                        <label class="form-label">Start</label>
                    </div>
                    <div class="col-md-9">
                        <input type="time" name="start" value="<%=connection.start %>" class="form-control" id="inputStart">
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <div class="row">
                    <div class="col-md-1">
                        <label class="form-label">End</label>
                    </div>
                    <div class="col-md-9">
                        <input type="time" name="end" value="<%=connection.end %>" class="form-control" id="inputEnd">
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <div class="row">
                    <div class="col-md-1">
                        <label class="form-label">Image</label>
                    </div>
                    <div class="col-md-9">
                        <input type="text" name="image" value="<%=connection.image %>" class="form-control" id="inputImage">
                    </div>
                </div>
            </div>

            <button type="submit" id="create-connection-btn">Update Connection</button>
          </form>
    </div>

    <!-- footer -->
    <%- include('../partials/footer.ejs') %>