<%- include('../partials/header.ejs') %>

    <!-- Main Content -->
    <div class="main container">
        <div class="header">
            <h2><%= connection.title%></h2>
            <div class="buttons">
                <form>
                <button class="btn" id="update-btn" type="submit" formmethod="get" formaction="/connections/<%=connection.id%>/edit">update</button>
                <button class="btn" id="delete-btn" type="submit" formmethod="post" formaction="/connections/<%=connection.id%>?_method=DELETE">delete</button>
                </form>
            </div>
        </div>
        <div class="event-Details">
            <div ><img class="event-img" src="<%=connection.image%>" alt=""></div>
            <div class="info">
                <div>
                    <p style="font-weight: bold;font-size: large;">Hosted by <%= connection.host%></p>
                    <p>Date: <%=connection.when%></p>
                    <p>Time: <%=connection.start%> to <%= connection.end %></p>
                    <p>Venue: <%=connection.where%></p>
                </div>
            </div>
        </div>
        <div class="ext-details">
            <h4>Details:</h4>
            <p><%= connection.details %></p>
        </div>
        
    </div>

    

    <!-- footer -->
    <%- include('../partials/footer.ejs') %>