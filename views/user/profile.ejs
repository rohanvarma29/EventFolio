                    <tr>
                        <th>Connection Name</th>
                        <th>Category</th>
                        <th>RSVP status</th>
                    </tr>
                </thead>
                <tbody>
                    <%rsvps.forEach(rsvp => {%>
                    <tr>
                    <td><%=rsvp.connection.title%></td>
                    <td><%=rsvp.connection.topic%></td>
                    <td><%=rsvp.rsvp%></td>
                    </tr>
                    <%});%>

                </tbody>
            </table>
            <%} else{%>
                <p>you not rsvp'd any connections</p>
            <%}%>


</div>
